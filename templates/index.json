        "liquid_PgkUeM": {
          "type": "liquid",
          "settings": {
            "liquid": "{%- assign fp = section.settings.product -%}\n{%- if fp and fp.has_only_default_variant == false -%}\n  {%- assign current_variant = fp.selected_or_first_available_variant -%}\n\n  <!-- ‚ñº‚ñº‚ñº Variant dropdown ‚Äî HTML rendu c√¥t√© Liquid ‚ñº‚ñº‚ñº -->\n  <div id=\"nk-dd-{{ section.id }}\" class=\"nk-dd-wrapper\" data-section-id=\"{{ section.id }}\" data-product-id=\"{{ fp.id }}\">\n    {%- for opt in fp.options_with_values -%}\n      {%- assign idx = forloop.index0 -%}\n      <div class=\"nk-dd-group\" data-opt-index=\"{{ idx }}\">\n        <label class=\"nk-dd-label\">{{ opt.name }}</label>\n        <div class=\"nk-dd\">\n          <select class=\"nk-dd-select\" aria-label=\"{{ opt.name }}\">\n            {%- assign selected_val = current_variant.options[idx] -%}\n            {%- for val in opt.values -%}\n              <option value=\"{{ val | escape }}\"{% if val == selected_val %} selected{% endif %}>{{ val }}</option>\n            {%- endfor -%}\n          </select>\n          <span class=\"nk-dd-caret\" aria-hidden=\"true\">‚ñæ</span>\n        </div>\n      </div>\n    {%- endfor -%}\n  </div>\n  <!-- ‚ñ≤‚ñ≤‚ñ≤ /HTML ‚ñ≤‚ñ≤‚ñ≤ -->\n\n  <style>\n    /* m√™me design que pr√©c√©demment */\n    .nk-dd-wrapper{ width:100%; margin:1rem 0; }\n    .nk-dd-group{ width:100%; margin-bottom:10px; }\n    .nk-dd-label{ display:block; margin:0 0 6px; font-size:14px; color:#222; }\n    .nk-dd{ position:relative; width:100%; background:#e2e6ea; border-radius:8px; overflow:hidden; height:44px; display:flex; align-items:center; }\n    .nk-dd-select{\n      appearance:none; -webkit-appearance:none; -moz-appearance:none;\n      border:none; background:transparent; width:100%; height:44px;\n      padding:0 40px 0 12px; font-size:16px; color:#000; cursor:pointer;\n    }\n    .nk-dd-select:focus{ outline:none; }\n    .nk-dd-caret{ position:absolute; right:10px; top:0; bottom:0; display:flex; align-items:center; pointer-events:none; font-size:16px; color:#000; }\n    .nk-dd-select:disabled{ opacity:.55; cursor:not-allowed; }\n    .nk-dd--invalid .nk-dd{ outline:2px solid #b00020; background:#fff; }\n  </style>\n\n  <script>\n  (function(){\n    var container = document.getElementById('nk-dd-{{ section.id }}');\n    if(!container) return;\n\n    var SECTION_ID = container.dataset.sectionId;\n    var scope = document.getElementById('shopify-section-' + SECTION_ID) || document;\n    var productId = container.dataset.productId;\n\n    // Variantes depuis Liquid (JSON s√ªr)\n    var variants = {{ fp.variants | json }};\n    // Nombre d'options\n    var optionCount = 0;\n    if (variants.some(function(v){return v.option1})) optionCount = 1;\n    if (variants.some(function(v){return v.option2})) optionCount = 2;\n    if (variants.some(function(v){return v.option3})) optionCount = 3;\n\n    var selects = Array.prototype.slice.call(container.querySelectorAll('.nk-dd-select'));\n\n    function selection(){\n      return selects.map(function(s){ return s.value; });\n    }\n    function findVariant(sel){\n      return variants.find(function(v){\n        var arr = [v.option1, v.option2, v.option3].slice(0, optionCount);\n        if (arr.length !== sel.length) return false;\n        for (var i=0;i<arr.length;i++){ if(String(arr[i]) !== String(sel[i])) return false; }\n        return true;\n      }) || null;\n    }\n\n    // ‚Äî‚Äî‚Äî cibler tous les formulaires add-to-cart pertinents (section + sticky/drawer de CE produit)\n    var idSet = new Set(variants.map(function(v){ return String(v.id); }));\n    function targetForms(){\n      var forms = Array.prototype.slice.call(document.querySelectorAll('form[action*=\"/cart/add\"]'));\n      return forms.filter(function(f){\n        if (f.closest && f.closest('#shopify-section-' + SECTION_ID)) return true;\n        var fld = f.querySelector('[name=\"id\"]');\n        var val = fld && (fld.value || fld.getAttribute('value'));\n        return val ? idSet.has(String(val)) : false;\n      });\n    }\n\n    function setVariantOnForm(form, variantId){\n      var input = form.querySelector('input[name=\"id\"]');\n      var selEl = form.querySelector('select[name=\"id\"]');\n\n      if (selEl && Array.prototype.slice.call(selEl.options).some(function(o){return String(o.value)===String(variantId);})){\n        selEl.value = String(variantId);\n        selEl.dispatchEvent(new Event('input', {bubbles:true}));\n        selEl.dispatchEvent(new Event('change', {bubbles:true}));\n      } else {\n        if(!input){\n          input = document.createElement('input');\n          input.type = 'hidden';\n          input.name = 'id';\n          form.appendChild(input);\n        }\n        input.value = String(variantId);\n        input.dispatchEvent(new Event('input', {bubbles:true}));\n        input.dispatchEvent(new Event('change', {bubbles:true}));\n      }\n      Array.prototype.slice.call(form.querySelectorAll('[data-variant-id]')).forEach(function(el){\n        el.setAttribute('data-variant-id', String(variantId));\n      });\n    }\n\n    function ensureHiddenForBuyButtons(variantId){\n      var buyButtons = scope.querySelectorAll('buy-buttons[form], .buy-buttons[form]');\n      Array.prototype.forEach.call(buyButtons, function(bb){\n        var formId = bb.getAttribute('form');\n        if(!formId) return;\n        var hidden = container.querySelector('input[type=\"hidden\"][name=\"id\"][data-nk-form=\"'+formId+'\"]');\n        if(!hidden){\n          hidden = document.createElement('input');\n          hidden.type = 'hidden';\n          hidden.name = 'id';\n          hidden.setAttribute('data-nk-form', formId);\n          hidden.setAttribute('form', formId);\n          container.appendChild(hidden);\n        }\n        hidden.value = String(variantId);\n      });\n    }\n\n    function updateAvailability(){\n      var cur = selection();\n      selects.forEach(function(sel, idx){\n        Array.prototype.slice.call(sel.options).forEach(function(opt){\n          var test = cur.slice();\n          test[idx] = opt.value;\n          var possible = variants.some(function(v){\n            var arr = [v.option1, v.option2, v.option3].slice(0, optionCount);\n            for (var i=0;i<test.length;i++){\n              if (test[i] && String(arr[i]) !== String(test[i])) return false;\n            }\n            return v.available;\n          });\n          opt.disabled = !possible;\n        });\n        if(sel.selectedOptions[0] && sel.selectedOptions[0].disabled){\n          var firstEnabled = Array.prototype.slice.call(sel.options).find(function(o){return !o.disabled;});\n          if(firstEnabled) sel.value = firstEnabled.value;\n        }\n      });\n    }\n\n    function pushVariantEverywhere(variant){\n      var vid = variant.id;\n      targetForms().forEach(function(f){ setVariantOnForm(f, vid); });\n      ensureHiddenForBuyButtons(vid);\n      var detail = { variant: variant, productId: productId };\n      document.dispatchEvent(new CustomEvent('variant:change', {detail: detail, bubbles: true}));\n    }\n\n    function applySelection(){\n      var v = findVariant(selection());\n      if(v){\n        container.classList.remove('nk-dd--invalid');\n        pushVariantEverywhere(v);\n      } else {\n        container.classList.add('nk-dd--invalid');\n      }\n      updateAvailability();\n    }\n\n    // Init depuis form(s) existant(s) s‚Äôil y en a\n    (function initFromForms(){\n      var forms = targetForms();\n      var currentId = forms.map(function(f){\n        var fld = f.querySelector('[name=\"id\"]');\n        return fld && (fld.value || fld.getAttribute('value'));\n      }).find(Boolean);\n      var v = currentId ? variants.find(function(x){return String(x.id)===String(currentId);}) : null;\n\n      if(v){\n        var arr = [v.option1, v.option2, v.option3].slice(0, optionCount);\n        selects.forEach(function(sel, i){\n          var val = arr[i];\n          if(val && Array.prototype.slice.call(sel.options).some(function(o){return o.value===String(val);})){\n            sel.value = String(val);\n          }\n        });\n        pushVariantEverywhere(v);\n      } else {\n        updateAvailability();\n        var first = findVariant(selection()) || variants.find(function(x){return x.available;}) || variants[0];\n        if(first){\n          var arr2 = [first.option1, first.option2, first.option3].slice(0, optionCount);\n          selects.forEach(function(sel,i){ if(arr2[i]) sel.value = String(arr2[i]); });\n          pushVariantEverywhere(first);\n        }\n      }\n      updateAvailability();\n    })();\n\n    selects.forEach(function(sel){ sel.addEventListener('change', applySelection); });\n\n    var mo = new MutationObserver(function(){ applySelection(); });\n    mo.observe(document.body, {childList:true, subtree:true});\n  })();\n  </script>\n{%- endif -%}"
